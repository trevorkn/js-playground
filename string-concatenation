// Declare a variable to store the blog title
const title = 'Best reads of 2019';

// Declare a variable to store the author's name
const auther = 'Mario'; // Note: "auther" is a typo; correct spelling is "author"

// Declare a variable to store the number of likes
const likes = 30;

// Combine strings and variables using concatenation to form a full sentence
result = 'The blog called ' + title + ' by ' + auther + ' has ' + likes + ' likes.';

// Output the final message to the console
console.log(result);

